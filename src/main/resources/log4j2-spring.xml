<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="serviceName">${spring:spring.application.name:-unknown-app}</Property>
        <Property name="serviceVersion">${env:APP_VERSION:-0.0.1}</Property>
        <Property name="serviceEnv">${env:ENV_NAME:-NOTSET}</Property>
    </Properties>

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <EcsLayout serviceName="${serviceName}" serviceVersion="${serviceVersion}" serviceEnvironment="${serviceEnv}" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>

